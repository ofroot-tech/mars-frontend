{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",                    // ðŸ‘ˆ Required to use "paths"
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["app/*"],           // ðŸ‘ˆ Makes "@/components/Contact" resolve to "app/components/Contact"
      "@/components/*": ["app/components/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/**/*.js"],
  "exclude": ["node_modules"]
}
